{
  "name": "rkc",
  "description": "RKC",
  "version": "1.0.0",
  "private": true,
  "author": "https://dnc.net.ua/",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "main": "n/a",
  "scripts": {
    "build": "export GATSBY_STALL_TIMEOUT=100000 GATSBY_CONNECTION_TIMEOUT=100000 && gatsby build",
    "clean": "rimraf public",
    "deploy": "rm -rf .cache public && gatsby build && firebase deploy",
    "deploy-prod": "rm -rf .cache public node-modules && npm i && gatsby build && firebase deploy",
    "dev": "gatsby develop",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint-css": "stylelint \"src/**/*.{scss,css}\" --fix",
    "lint": "eslint  \"src/**/*.{ts,tsx}\"",
    "start": "export GATSBY_STALL_TIMEOUT=100000 GATSBY_CONNECTION_TIMEOUT=100000 && npm run dev",
    "test": "npm run type-check && npm run lint",
    "type-check": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format && npm run lint-css",
      "commit-msg": "commitlint --format -E HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "dotenv": "^8.2.0",
    "firebase": "^7.13.2",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.5.0",
    "fuse.js": "^3.4.3",
    "gatsby": "^2.20.6",
    "gatsby-background-image": "^1.1.2",
    "gatsby-image": "^2.4.19",
    "gatsby-plugin-layout": "^1.2.1",
    "gatsby-plugin-manifest": "^2.3.2",
    "gatsby-plugin-prefetch-google-fonts": "^1.4.3",
    "gatsby-plugin-react-helmet": "^3.2.1",
    "gatsby-plugin-react-svg": "^3.0.0",
    "gatsby-plugin-robots-txt": "^1.5.3",
    "gatsby-plugin-sass": "^2.2.1",
    "gatsby-plugin-sharp": "^2.6.36",
    "gatsby-plugin-sitemap": "^2.3.1",
    "gatsby-plugin-typescript": "^2.3.1",
    "gatsby-source-filesystem": "^2.2.2",
    "gatsby-transformer-remark": "^2.7.1",
    "gatsby-transformer-sharp": "^2.5.15",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^5.2.1",
    "react-inlinesvg": "^2.0.1",
    "react-phone-input-2": "^2.13.8"
  },
  "devDependencies": {
    "@fika/gatsby-source-cockpit": "^1.1.2",
    "@types/classnames": "^2.2.10",
    "@types/node": "^12.12.31",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@types/react-helmet": "^5.0.15",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "commitlint": "^8.3.5",
    "eslint": "^6.8.0",
    "eslint-config-blvd": "^0.1.1",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "gatsby-plugin-eslint": "^2.0.8",
    "husky": "^3.1.0",
    "node-sass": "^4.13.1",
    "prettier": "^1.19.1",
    "stylelint": "^13.2.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-declaration-strict-value": "^1.6.0",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-high-performance-animation": "^1.5.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.16.0",
    "typescript": "^3.8.3"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-rational-order"
    ],
    "plugins": [
      "stylelint-order",
      "stylelint-scss",
      "stylelint-config-rational-order/plugin",
      "stylelint-high-performance-animation",
      "stylelint-declaration-use-variable"
    ],
    "rules": {
      "no-empty-source": [
        true,
        {
          "severity": "warning"
        }
      ],
      "plugin/no-low-performance-animation-properties": [
        true,
        {
          "severity": "warning"
        }
      ],
      "sh-waqar/declaration-use-variable": [
        [
          "/color/",
          "font-size",
          "font-family",
          "font-weight"
        ],
        {
          "ignoreValues": [
            "transparent",
            "inherit",
            "/regexForspecialFunc/"
          ]
        }
      ],
      "order/properties-order": [],
      "plugin/rational-order": [
        true,
        {
          "border-in-box-model": false,
          "empty-line-between-groups": false
        }
      ],
      "selector-type-no-unknown": [
        true,
        {
          "ignore": [
            "custom-elements"
          ]
        }
      ],
      "no-descending-specificity": true,
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true
    }
  }
}
